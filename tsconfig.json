{
  "extends": "./node_modules/@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "allowJs": true,
    "outDir": "build/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
